# Environment variables for local development
# Copy this file to .env and modify as needed.

# MySQL Settings
# These values are used by both docker-compose and the FastAPI application.
MYSQL_HOST=db
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=app

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# FastAPI Application Settings
# This is used by the application (see src/config.py).
SECRET_KEY=a_super_secret_key_for_development_only
DEBUG=True
ENVIRONMENT=development
